
# IMAP settings
source ~/.mutt/muttrc-imap

set mail_check_stats

# source colors and keybindings
source ~/.mutt/muttrc-colors
source ~/.mutt/muttrc-bindings

# Folders
source ~/.mutt/muttrc-directory

# Sane defaults
source ~/.mutt/muttrc-standard

# View Options
source ~/.mutt/muttrc-view
source ~/.mutt/muttrc-custom-tag-colors-example

# Addressbook options
source ~/.mutt/muttrc-addressbook

# Personal information
source ~/.mutt/muttrc-identity

# Start on CSU account
source ~/.mutt/muttrc-csu

